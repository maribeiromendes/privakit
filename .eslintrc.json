{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    // Disable rules that are not appropriate for this project
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "no-case-declarations": "off",
    "no-useless-escape": "off"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    "src/test/*.test.ts"
  ]
}