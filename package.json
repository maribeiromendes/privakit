{
  "name": "privakit",
  "version": "0.1.0",
  "description": "TypeScript/JavaScript library for handling Personally Identifiable Information (PII) with validation, normalization, masking, redaction, and anonymization capabilities",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:privacy": "node test-privacy.js",
    "test:simple": "node test-simple.js",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:sarif": "eslint src --ext .ts,.tsx --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif",
    "format": "prettier --write src/**/*.ts docs/**/*.md *.md",
    "format:check": "prettier --check src/**/*.ts docs/**/*.md *.md",
    "typecheck": "tsc --noEmit",
    "verify-package": "node scripts/verify-package.js",
    "prepack": "npm run build",
    "prepublishOnly": "npm run test:run && npm run verify-package && npm audit --audit-level=moderate",
    "dev:test-app": "node dev-scripts/package-and-install.js && cd dev-scripts/test-app && npm run dev",
    "prepare": "husky install"
  },
  "keywords": [
    "pii",
    "privacy",
    "gdpr",
    "ccpa",
    "lgpd",
    "validation",
    "anonymization",
    "redaction",
    "masking",
    "typescript",
    "security",
    "data-protection",
    "react",
    "vue",
    "angular",
    "svelte",
    "nextjs",
    "nuxt",
    "nodejs",
    "brazil",
    "compliance"
  ],
  "author": "maribeiromendes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maribeiromendes/privakit.git"
  },
  "bugs": {
    "url": "https://github.com/maribeiromendes/privakit/issues"
  },
  "homepage": "https://github.com/maribeiromendes/privakit#readme",
  "dependencies": {
    "compromise": "^14.14.4",
    "libphonenumber-js": "^1.11.19",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@types/node": "^24.3.0",
    "@types/validator": "^13.11.9",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./locales/*": {
      "types": "./dist/locales/*.d.ts",
      "import": "./dist/locales/*.esm.js",
      "require": "./dist/locales/*.js"
    },
    "./adapters/*": {
      "types": "./dist/adapters/*.d.ts",
      "import": "./dist/adapters/*.esm.js",
      "require": "./dist/adapters/*.js"
    }
  },
  "type": "module",
  "lint-staged": {
    "src/**/*.ts": [
      "npm run build",
      "npm test"
    ],
    "docs/**/*.md": [
      "npx prettier --write"
    ],
    "*.md": [
      "npx prettier --write"
    ]
  }
}
